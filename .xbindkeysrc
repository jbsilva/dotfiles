###########################
# xbindkeys configuration #
###########################

"ncmpcpp toggle || mpc toggle"
XF86AudioPlay

"ncmpcpp next || mpc next"
XF86AudioNext

"ncmpcpp prev || mpc prev"
XF86AudioPrev

"ncmpcpp stop || mpc stop"
XF86AudioStop

# Volume +5%
"pamixer --increase 5 || amixer -q set Master 5%+"
XF86AudioRaiseVolume

# Volume -5%
"pamixer --decrease 5 || amixer -q set Master 5%-"
XF86AudioLowerVolume

# Mute/Unmute
"pamixer --toggle-mute || amixer -q set Master toggle"
XF86AudioMute

# Backlight do monitor -5%
"xbacklight -dec 5"
m:0x0 + c:232

# Backlight do monitor +5%
"xbacklight -inc 5"
m:0x0 + c:233

# keyboard backlight increase
"kbdlight up"
m:0x0 + c:238

# keyboard backlight decrease
"kbdlight down"
m:0x0 + c:237

# screenshot (F3)
"maim -s"
m:0x0 + c:212

# screenshot rectangle (F3)
"maim ~/$(date +%F-%T).png"
m:0x0 + c:128

